<table class="table table-bordered" id="task-listing">
  <thead>
    <tr>
      <th>Title</th>
      <th>Prepared By</th>
      <th>Status</th>
      <th>Created At</th> 
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task_path(task) %></td>
        <td><%= task.try(:user).try(:email) %></td>
        <td><%= task.status %></td>
        <td><%= task.created_at.strftime("%d-%b-%y") %></td>
        <td>
            <%= link_to t('.show', :default => t("helpers.links.show")),
                        task_path(task), :class => 'btn btn-info btn-xs' %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        edit_task_path(task), :class => 'btn btn-warning btn-xs' %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function(){
    $("#task-listing").DataTable();
  });
</script>
